DEFINE STGPOOL  DP4SQL_TAPE_2OF2 <LTO8DEVCLASS> POOLTYPE=COPY    MAXSCRATCH=9999                                           DESCRIPTION='DP4SQL: - CSP on tape'                      RECLAIM=100 RECLAIMPROCESS=2 COLLOCATE=NO REUSEDELAY=<DRMDBBACKUPEXPIREDAYS>
DEFINE STGPOOL  DP4SQL_TAPE_1OF1 <LTO8DEVCLASS> POOLTYPE=PRIMARY MAXSCRATCH=9999                                           DESCRIPTION='DP4SQL: - PSP on tape'                      RECLAIM=100 RECLAIMPROCESS=2 COLLOCATE=NO REUSEDELAY=<DRMDBBACKUPEXPIREDAYS>
DEFINE STGPOOL  DP4SQL_TAPE_1OF2 <LTO8DEVCLASS> POOLTYPE=PRIMARY MAXSCRATCH=9999                                           DESCRIPTION='DP4SQL: - PSP on tape + CSP on tape'        RECLAIM=100 RECLAIMPROCESS=2 COLLOCATE=NO REUSEDELAY=<DRMDBBACKUPEXPIREDAYS>
DEFINE STGPOOL  DP4SQL_DISK_1OF1 DP4SQL         POOLTYPE=PRIMARY MAXSCRATCH=20                                             DESCRIPTION='DP4SQL: - PSP on disk only'                 RECLAIM=100 RECLAIMPROCESS=2 COLLOCATE=NO REUSEDELAY=<DRMDBBACKUPEXPIREDAYS>
DEFINE STGPOOL  DP4SQL_DISK_1OF2 DP4SQL         POOLTYPE=PRIMARY MAXSCRATCH=20                                             DESCRIPTION='DP4SQL: - PSP on disk only + CSP on tape'   RECLAIM=100 RECLAIMPROCESS=2 COLLOCATE=NO REUSEDELAY=<DRMDBBACKUPEXPIREDAYS>
DEFINE STGPOOL  DP4SQL_DKTP_1OF1 DP4SQL         POOLTYPE=PRIMARY MAXSCRATCH=20   MAXSIZE=200G NEXTSTGPOOL=DP4SQL_TAPE_1OF1 DESCRIPTION='DP4SQL: - PSP on disk & tape'               RECLAIM=100  RECLAIMPROCESS=2 COLLOCATE=NO REUSEDELAY=<DRMDBBACKUPEXPIREDAYS>
DEFINE STGPOOL  DP4SQL_DKTP_1OF2 DP4SQL         POOLTYPE=PRIMARY MAXSCRATCH=20   MAXSIZE=200G NEXTSTGPOOL=DP4SQL_TAPE_1OF2 DESCRIPTION='DP4SQL: - PSP on disk & tape + CSP on tape' RECLAIM=100 RECLAIMPROCESS=2 COLLOCATE=NO REUSEDELAY=<DRMDBBACKUPEXPIREDAYS>

